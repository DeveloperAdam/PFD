<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.techease.pfd.Fragments.CoupansFrag">
<ImageView
    android:layout_marginTop="30sp"
    android:layout_width="200sp"
    android:layout_height="200sp"
    android:src="@drawable/couponlogo"
    android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10sp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#295786"
        />

    <TextView
        android:id="@+id/DiscountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:text="@string/disscountValue"
        android:textColor="#295786"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/DiscountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percentage"
        android:textSize="20sp"
        android:textColor="#295786"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disscount"
        android:layout_marginLeft="5sp"
        android:textColor="#295786"
        android:textSize="25sp"/>
</LinearLayout>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/coupondark"
        android:scaleType="fitXY"/>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:clickable="true"
        card_view:cardBackgroundColor="#fff"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:id="@+id/cardViewCustomBestDeal">
        <TextView
            android:id="@+id/coupanName"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="@string/Pesh"
            android:background="#295786"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_marginBottom="2sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            />
        </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/coupansValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiryCoupan"
        android:layout_gravity="bottom|center"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginBottom="40sp"/>
    <ProgressBar
        android:id="@+id/progress_barCoupans"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        android:max="100"
        android:progress="0" />
</FrameLayout>
</LinearLayout>
